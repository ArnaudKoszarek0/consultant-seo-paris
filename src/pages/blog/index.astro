---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Base
  title="Blog SEO - Arnaud Koszarek, Consultant SEO Paris"
  description="Articles techniques sur le SEO : audit, contenu, netlinking, performance. Des analyses concrètes, pas du contenu générique."
>
  <section class="max-w-4xl mx-auto px-6 py-16">
    <h1 class="text-3xl md:text-4xl font-bold mb-4">Blog</h1>
    <p class="text-gray-600 text-lg mb-12">Analyses, retours d'expérience et méthodes. Du concret.</p>

    <div class="space-y-8">
      {posts.map(post => (
        <a href={`/blog/${post.id}`} class="block group">
          <article class="border-b border-gray-100 pb-8">
            <time class="text-sm text-gray-400">{new Date(post.data.date).toLocaleDateString('fr-FR', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
            <h2 class="text-xl font-bold mt-1 mb-2 group-hover:text-gray-600 transition">{post.data.title}</h2>
            <p class="text-gray-600">{post.data.description}</p>
          </article>
        </a>
      ))}
    </div>
  </section>
</Base>
